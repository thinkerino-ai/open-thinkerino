{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "rootDir": "",
    "baseUrl": "src",
    "outDir": "build",
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}